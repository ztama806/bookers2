<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h3><%= "#{@user.errors.full_messages.count} errors prohibited this obj from being saved:" %></h3>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>

      <%= form_with model: @user, local:true do |f| %>
        <h5>Name</h5>
          <%= f.text_field :name, size: 60 %>
        <h5>Image</h5>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        <h5>Introduction</h5>
          <%= f.text_area :introduction, size: "63×20" %>
        <div class="actions">
          <%= f.submit('Update User',class: 'btn btn-secondary') %>
        </div>
      <% end %>
    </div>
  </div>
</div>